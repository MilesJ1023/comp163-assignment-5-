current_number = int(input())
print("=== Challenge 1: Collatz Conjecture ===")
step_count = 0
print(f"Enter starting number: Sequence: {current_number} ", end="") #collects input 1 and keeps sequence on the same line

while current_number >1: #Starts loop so it runs while number chosen is greater than 1
    if current_number % 2 == 0: # checks if number is divisible by 2
        current_number = current_number//2 #updates current number for loop
    else:
        current_number = current_number*3 + 1 #if number is not divisible by 2 starts this sequence that will eventually be divisible by 2
    print(f"{current_number} ",end="")
    step_count = step_count +1 #after each iteration this increments the step count
print(f"\nSteps: {step_count}")
print()


print("=== Challenge 2: Prime Number Checker ===")
test_number = int(input("Enter a number: "))
print("Testing divisors from 2 to", test_number - 1,"...")

is_prime = True #already sets prime to be true
for i in range(2, test_number):
    if test_number % i == 0:
        print(f"{test_number} is not prime (divisible by {i})")
        is_prime = False #if number is not prime or a number other than 1 gets % 0,  prime is set to false
        break #ends loop so it's only ran once
if is_prime: #only works if prime is true
    print(f"{test_number} is prime!")
print()

print("=== Challenge 3: Multiplication Table ===")
print("Multiplication Table:")
# used ChatAI to help me understand the spacing part with column:4 and row:2
print("  ", end="")
for column in range(1,11):
    print(f"{column:4}", end="")
print()

for row in range(1,11):
    print(f"{row:2}", end="")
    for column in range(1,11):
        product = column *row
        print(f"{product:4}", end="")
    print()
